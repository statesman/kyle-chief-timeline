<div class="item post clearfix">
  <div class="inner">
    <div class="title">
      <h3>{{title}}</h3>
    </div>
    <div class="date">
      <div class="shadow-cover"></div>{{display_date}}
    </div>
    <div class="body">
      {{#if photo_url}}
        <img class="img-responsive" src="{{photo_url}}" alt="">
        {{#if caption}}
          <div class="caption">{{{caption}}}</div>
        {{/if}}
        <hr />
      {{/if}}
      {{#if body}}
        <div class="text">{{body}}</div>
      {{/if}}
      <div class="clearfix">
        {{#if read_more_url}}
          <a target="_blank" class="more" href="{{read_more_url}}">READ MORE</a>
          <div class="share">
            <a href="#" class="share-trigger"><i class="fa fa-share-alt"></i></a>
            <div class="share-popup">
              Share:
              <a href="{{fbUrl read_more_url}}" target="_blank" class="share-button facebook-share-button"><i class="fa fa-facebook-square"></i></a>
              <a href="{{twUrl read_more_url}}" target="_blank" class="share-button twitter-share-button"><i class="fa fa-twitter"></i></a>
              <a href="{{gpUrl read_more_url}}" target="_blank" class="share-button gplus-share-button"><i class="fa fa-google-plus"></i></a>
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
